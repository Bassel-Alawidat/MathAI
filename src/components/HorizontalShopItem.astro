---
const {
  title,
  img,
  desc,
  url,
  badge,
  pricing,
  oldPricing,
  checkoutUrl,
  details = true,
  custom_link = false,
  custom_link_label = "",
} = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-2xl bg-white border border-gray-200 hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] overflow-hidden">
  <a href={url} class="block">
    <div class="flex flex-col md:flex-row">
      {img && (
        <Image
          width={750}
          height={422}
          format="webp"
          src={img}
          alt={title}
          class="w-full md:w-52 h-44 md:h-auto object-cover rounded-t-2xl md:rounded-l-2xl md:rounded-tr-none transition-all duration-300"
        />
      )}

      <div class="flex flex-col justify-between p-5 w-full">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800 mb-2 flex items-center gap-2">
            {title}
            {badge && <span class="text-sm px-2 py-1 bg-indigo-100 text-indigo-600 rounded-full">{badge}</span>}
          </h2>

          <p class="text-gray-600 text-base mb-4">{desc}</p>
        </div>

        <div class="flex items-center justify-between mt-auto">
          <div class="text-lg font-bold text-indigo-600">
            {pricing && <span>{pricing}</span>}
            {oldPricing && (
              <span class="text-sm line-through text-gray-400 ml-2">{oldPricing}</span>
            )}
          </div>

          {checkoutUrl && (
            <a
              href={checkoutUrl}
              target="_blank"
              class="px-4 py-2 text-sm rounded-full bg-indigo-600 text-white hover:bg-indigo-700 transition"
            >
             Buy Now
            </a>
          )}
        </div>
      </div>
    </div>
  </a>
</div>
